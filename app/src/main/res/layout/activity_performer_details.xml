<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:theme="@android:style/Theme.NoTitleBar">

    <uk.co.senab.bitmapcache.CacheableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/coverView"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textName"
        android:layout_alignTop="@+id/coverView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/coverView"
        android:textColor="#000000"
        android:text="Name"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textGenres"
        android:textColor="#000000"
        android:text="Genres"
        android:layout_below="@+id/textName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/coverView"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Записи:"
        android:id="@+id/textLTracks"
        android:textColor="#000000"
        android:layout_below="@+id/textGenres"
        android:layout_toEndOf="@+id/coverView"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textNTracks"
        android:textColor="#000000"
        android:text="number"
        android:layout_below="@+id/textNAlbums"
        android:layout_toEndOf="@+id/textLAlbums"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Альбомы:"
        android:id="@+id/textLAlbums"
        android:textColor="#000000"
        android:layout_below="@+id/textLTracks"
        android:layout_toEndOf="@+id/coverView"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textNAlbums"
        android:textColor="#000000"
        android:text="number"
        android:layout_below="@+id/textGenres"
        android:layout_toEndOf="@+id/textLTracks"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Сайт:"
        android:id="@+id/textLSite"
        android:textColor="#000000"
        android:layout_below="@+id/coverView"
        android:layout_alignStart="@+id/coverView"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textWebSite"
        android:textColor="#000000"

        android:text="url"
        android:layout_below="@+id/coverView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textLSite"
        android:layout_margin="5dp" />
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textDescription"
        android:textColor="#000000"
        android:text="Description of artist"
        android:layout_alignStart="@+id/textLSite"
        android:layout_alignParentBottom="true"
        android:maxLines = "6"
        android:scrollbars = "vertical"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textLSite"
        android:gravity="left" />
</RelativeLayout>